<UserControl x:Class="BandBaajaVivaah.WPF.Views.AddEditToolBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BandBaajaVivaah.WPF.Views"
             xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
             mc:Ignorable="d" 
             d:DesignHeight="40" d:DesignWidth="800"
             Background="DarkOrange">
    <DockPanel>
        <StackPanel Orientation="Horizontal" DockPanel.Dock="Left" Margin="0,5,10,3">
            <Button x:Name="BackButton" Click="BackButton_Click"
                Style="{StaticResource Styles.ButtonOnPageToolBar}" 
                Margin="5,0,20,0"
                ToolTip="Back to Weddings Page">
                <iconPacks:PackIconMaterial Kind="ArrowLeft" Width="24" Height="10"/>
            </Button>

            <Button x:Name="SaveButton" Click="SaveButton_Click"
                    Style="{StaticResource Styles.ButtonOnPageToolBar}" 
                    Margin="5,0,20,0"
                    ToolTip="Save">
                <iconPacks:PackIconMaterial Kind="Floppy" Width="24" Height="15"/>
            </Button>
        </StackPanel>
    </DockPanel>
</UserControl>
