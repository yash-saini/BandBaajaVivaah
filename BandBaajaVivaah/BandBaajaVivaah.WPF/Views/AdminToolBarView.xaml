<UserControl x:Class="BandBaajaVivaah.WPF.Views.AdminToolBarView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BandBaajaVivaah.WPF.Views"
             mc:Ignorable="d" 
             d:DesignHeight="45"
             xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
             xmlns:converters="clr-namespace:BandBaajaVivaah.WPF.Converters"
             d:DesignWidth="800"
             Background="DarkOrange" Height="33">
    
    <UserControl.Resources>
        <converters:InverseBooleanConverter x:Key="InverseBooleanConverter"/>
    </UserControl.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
            <Button x:Name="BackButton" Click="BackButton_Click"
                    Style="{StaticResource Styles.ButtonOnPageToolBar}" 
                    Margin="5,0,20,0"
                    ToolTip="Back to Dashboard">
                <iconPacks:PackIconMaterial Kind="ArrowLeft" Width="24" Height="10"/>
            </Button>

            <Button x:Name="DeleteButton" Click="DeleteButton_Click"
                    Style="{StaticResource Styles.ButtonOnPageToolBar}"
                    Padding="10,5"
                    IsEnabled="{Binding Path=IsDeleteEnabled, RelativeSource={RelativeSource AncestorType=local:AdminToolBarView}}"
                    >
                <StackPanel Orientation="Horizontal">
                    <iconPacks:PackIconMaterial Kind="Delete" VerticalAlignment="Center" Margin="0,0,5,0"/>
                    <Label Content="Delete Selected" Style="{StaticResource Styles.Label}" Margin="0" Padding="0"/>
                </StackPanel>
            </Button>

            <Button Click="RefreshButton_Click" Style="{StaticResource Styles.ButtonOnPageToolBar}" Padding="10,5">
                <StackPanel Orientation="Horizontal">
                    <iconPacks:PackIconMaterial Kind="Refresh" VerticalAlignment="Center" Margin="0,0,5,0"/>
                    <Label Content="Refresh" Style="{StaticResource Styles.Label}" Margin="0" Padding="0"/>
                </StackPanel>
            </Button>
        </StackPanel>

        <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,10,0">
            <Button x:Name="FirstPageButton" Click="FirstPageButton_Click"
                    IsEnabled="{Binding Path=IsFirstPage, RelativeSource={RelativeSource AncestorType=local:AdminToolBarView}, Converter={StaticResource InverseBooleanConverter}}" 
                    Style="{StaticResource Styles.ButtonOnPageToolBar}" ToolTip="First Page">
                <iconPacks:PackIconMaterial Kind="PageFirst" />
            </Button>
            <Button x:Name="PreviousPageButton" Click="PreviousPageButton_Click" 
                    IsEnabled="{Binding Path=IsFirstPage, RelativeSource={RelativeSource AncestorType=local:AdminToolBarView}, Converter={StaticResource InverseBooleanConverter}}" 
                    Style="{StaticResource Styles.ButtonOnPageToolBar}" ToolTip="Previous Page">
                <iconPacks:PackIconMaterial Kind="ChevronLeft" />
            </Button>

            <TextBlock VerticalAlignment="Center" Margin="10,0">
                <TextBlock.Text>
                    <MultiBinding StringFormat="Page {0} of {1}">
                        <Binding Path="CurrentPage" RelativeSource="{RelativeSource AncestorType=local:AdminToolBarView}" FallbackValue="1"/>
                        <Binding Path="TotalPages" RelativeSource="{RelativeSource AncestorType=local:AdminToolBarView}" FallbackValue="1"/>
                    </MultiBinding>
                </TextBlock.Text>
            </TextBlock>

            <Button x:Name="NextPageButton" Click="NextPageButton_Click"
                    IsEnabled="{Binding Path=IsLastPage, RelativeSource={RelativeSource AncestorType=local:AdminToolBarView}, Converter={StaticResource InverseBooleanConverter}}" 
                    Style="{StaticResource Styles.ButtonOnPageToolBar}" ToolTip="Next Page">
                <iconPacks:PackIconMaterial Kind="ChevronRight" />
            </Button>
            <Button x:Name="LastPageButton" Click="LastPageButton_Click"
                    IsEnabled="{Binding Path=IsLastPage, RelativeSource={RelativeSource AncestorType=local:AdminToolBarView}, Converter={StaticResource InverseBooleanConverter}}" 
                    Style="{StaticResource Styles.ButtonOnPageToolBar}" ToolTip="Last Page">
                <iconPacks:PackIconMaterial Kind="PageLast" />
            </Button>
        </StackPanel>
    </Grid>
</UserControl>
