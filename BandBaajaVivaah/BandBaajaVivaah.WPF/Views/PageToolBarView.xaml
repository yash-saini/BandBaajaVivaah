<UserControl x:Class="BandBaajaVivaah.WPF.Views.PageToolBarView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BandBaajaVivaah.WPF.Views"
             xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
             mc:Ignorable="d" d:DesignWidth="800"
             Background="DarkOrange" Height="33">
    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
        
        <Button x:Name="BackButton" Click="BackButton_Click"
                Style="{StaticResource Styles.ButtonOnPageToolBar}" 
                Margin="5,0,20,0"
                ToolTip="Back to Dashboard">
            <iconPacks:PackIconMaterial Kind="ArrowLeft" Width="24" Height="10"/>
        </Button>

        <Button x:Name="AddButton" Click="AddButton_Click" Margin="5,0" Padding="10,5" Style="{StaticResource Styles.ButtonOnPageToolBar}">
            <StackPanel Orientation="Horizontal">
                <iconPacks:PackIconMaterial Kind="Plus" VerticalAlignment="Center" Margin="0,0,5,0"/>
                <Label Content="Add New" Style="{StaticResource Styles.Label}" Margin="0" Padding="0"/>
            </StackPanel>
        </Button>

        <Button x:Name="DeleteButton" Click="DeleteButton_Click"
                Style="{StaticResource Styles.ButtonOnPageToolBar}"
                Padding="10,5">
            <StackPanel Orientation="Horizontal">
                <iconPacks:PackIconMaterial Kind="Delete" VerticalAlignment="Center" Margin="0,0,5,0"/>
                <Label Content="Delete Selected" Style="{StaticResource Styles.Label}" Margin="0" Padding="0"/>
            </StackPanel>
        </Button>

        <Button Click="RefreshButton_Click" Style="{StaticResource Styles.ButtonOnPageToolBar}" Padding="10,5">
            <StackPanel Orientation="Horizontal">
                <iconPacks:PackIconMaterial Kind="Refresh" VerticalAlignment="Center" Margin="0,0,5,0"/>
                <Label Content="Refresh" Style="{StaticResource Styles.Label}" Margin="0" Padding="0"/>
            </StackPanel>
        </Button>
    </StackPanel>
</UserControl>
