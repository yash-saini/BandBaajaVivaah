<Page x:Class="BandBaajaVivaah.WPF.Views.Pages.Admin.EditUserView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BandBaajaVivaah.WPF.Views.Pages.Admin"
      xmlns:views="clr-namespace:BandBaajaVivaah.WPF.Views"
      xmlns:converters="clr-namespace:BandBaajaVivaah.WPF.Converters"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="EditUserView" Background="White">
    <Page.Resources>
        <converters:RadioButtonToStringConverter x:Key="RadioButtonToStringConverter"/>
    </Page.Resources>

    <DockPanel Margin="10">
        <views:AddEditToolBar DockPanel.Dock="Top"
                              BackButtonClicked="Toolbar_BackButtonClicked"
                              SaveButtonClicked="Toolbar_SaveButtonClicked"
                              IsSaveEnabled="True"/>

        <Grid Margin="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Label Grid.Row="0" Grid.Column="0" Content="Full Name:" FontWeight="Bold" Margin="5"/>
            <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding FullName}" VerticalAlignment="Center" Margin="5"/>

            <Label Grid.Row="1" Grid.Column="0" Content="Email:" FontWeight="Bold" Margin="5"/>
            <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding Email}" VerticalAlignment="Center" Margin="5"/>

            <Label Grid.Row="2" Grid.Column="0" Content="Role:" FontWeight="Bold" Margin="5" VerticalAlignment="Center"/>
            <StackPanel Grid.Row="2" Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                <RadioButton Content="User" Margin="5" Style="{x:Null}"
                             IsChecked="{Binding Role, Converter={StaticResource RadioButtonToStringConverter}, ConverterParameter='User', Mode=TwoWay}"/>
                <RadioButton Content="Admin" Margin="5" Style="{x:Null}"
                             IsChecked="{Binding Role, Converter={StaticResource RadioButtonToStringConverter}, ConverterParameter='Admin', Mode=TwoWay}"/>
            </StackPanel>
        </Grid>
    </DockPanel>
</Page>