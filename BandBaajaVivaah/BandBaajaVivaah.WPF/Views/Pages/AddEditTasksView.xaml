<Page x:Class="BandBaajaVivaah.WPF.Views.Pages.AddEditTasksView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BandBaajaVivaah.WPF.Views.Pages"
      xmlns:views="clr-namespace:BandBaajaVivaah.WPF.Views"
      xmlns:sys="clr-namespace:System;assembly=mscorlib"
      xmlns:converters="clr-namespace:BandBaajaVivaah.WPF.Converters"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Background="White"
      Title="AddEditTasksView">

    <Page.Resources>
        <converters:RadioButtonToStringConverter x:Key="RadioButtonToStringConverter"/>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </Page.Resources>

    <DockPanel Margin="10">
        <views:AddEditToolBar DockPanel.Dock="Top"
                           BackButtonClicked="Toolbar_BackButtonClicked"
                           SaveButtonClicked="Toolbar_SaveButtonClicked"
                           IsSaveEnabled="{Binding CanSave}"/>

        <Grid Margin="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <!-- Labels -->
                <ColumnDefinition Width="*"/>
                <!-- Inputs -->
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Title -->
            <Label Content="Title"
               Style="{StaticResource Styles.Label}"
               Grid.Row="0" Grid.Column="0" VerticalAlignment="Center"/>
            <TextBox Text="{Binding TitleText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, ValidatesOnNotifyDataErrors=True}"
                 Style="{StaticResource Styles.ValidatedTextBoxStyle}"
                 Grid.Row="0" Grid.Column="1" HorizontalAlignment="Left"
                 Width="300" Margin="45,5,0,5"/>

            <!-- Description -->
            <Label Content="Description"
               Style="{StaticResource Styles.Label}"
               Grid.Row="1" Grid.Column="0" VerticalAlignment="Center"/>
            <TextBox Text="{Binding Description, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, ValidatesOnNotifyDataErrors=True}"
                 Style="{StaticResource Styles.ValidatedTextBoxStyle}"
                 Grid.Row="1" Grid.Column="1" HorizontalAlignment="Left"
                 Width="300" Margin="45,5,0,5"
                 Height="80" TextWrapping="Wrap" AcceptsReturn="True"/>

            <!-- Due Date -->
            <Label Content="Due Date"
               Style="{StaticResource Styles.Label}"
               Grid.Row="2" Grid.Column="0" VerticalAlignment="Center"/>
            <DatePicker SelectedDate="{Binding DueDate, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, ValidatesOnNotifyDataErrors=True}"
                      Grid.Row="2" Grid.Column="1"
                      HorizontalAlignment="Left"
                      Width="200"
                      Margin="45,4,0,4"
                      Style="{StaticResource Styles.ValidatedDatePickerStyle}"/>

            <!-- Status Radio Buttons -->
            <Label Content="Status" 
                   Grid.Row="3" Grid.Column="0" 
                   VerticalAlignment="Center" 
                   Margin="0,0,10,0" 
                   Style="{StaticResource Styles.Label}"/>
            <StackPanel Grid.Row="3" Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center" Margin="45,5,0,5">
                <RadioButton Content="Not Started" GroupName="StatusGroup" Margin="0,0,15,0" Style="{x:Null}"
                            IsChecked="{Binding Status, Converter={StaticResource RadioButtonToStringConverter}, ConverterParameter='Not Started'}"/>
                <RadioButton Content="In Progress" GroupName="StatusGroup" Margin="0,0,15,0" Style="{x:Null}"
                            IsChecked="{Binding Status, Converter={StaticResource RadioButtonToStringConverter}, ConverterParameter='In Progress'}"/>
                <RadioButton Content="Completed" GroupName="StatusGroup" Margin="0,0,15,0" Style="{x:Null}"
                            IsChecked="{Binding Status, Converter={StaticResource RadioButtonToStringConverter}, ConverterParameter='Completed'}"/>
                <RadioButton Content="Delayed" GroupName="StatusGroup" Style="{x:Null}"
                            IsChecked="{Binding Status, Converter={StaticResource RadioButtonToStringConverter}, ConverterParameter='Delayed'}"/>
            </StackPanel>

            <!-- Error message indicator -->
            <Border Grid.Row="4" Grid.ColumnSpan="2" 
                    BorderThickness="1" BorderBrush="#FFDC000C" 
                    Background="#15FF0000" CornerRadius="3" 
                    Margin="0,15,0,0" Padding="10"
                    Visibility="{Binding ShowValidationSummary, Converter={StaticResource BooleanToVisibilityConverter}}">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="⚠️" FontSize="14" Margin="0,0,8,0"/>
                    <TextBlock Text="Please correct all errors before saving." 
                   FontWeight="Medium" Foreground="DarkRed"/>
                </StackPanel>
            </Border>
        </Grid>
    </DockPanel>
</Page>