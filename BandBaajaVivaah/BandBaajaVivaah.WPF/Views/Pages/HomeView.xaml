<Page x:Class="BandBaajaVivaah.WPF.Views.Pages.HomeView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BandBaajaVivaah.WPF.Views.Pages"
      xmlns:vm="clr-namespace:BandBaajaVivaah.WPF.ViewModel"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Background="AliceBlue"
      xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
      xmlns:converters="clr-namespace:BandBaajaVivaah.WPF.Converters">

    <Page.Resources>
        <converters:InverseBooleanConverter x:Key="InverseBooleanConverter"/>
        <converters:NullToVisibilityConverter x:Key="NullToVisibilityConverter"/>
    </Page.Resources>

    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
        <Label Content="{Binding WelcomeMessage}" FontSize="32" FontWeight="Bold" Style="{StaticResource MahApps.Styles.Label}"/>

        <WrapPanel HorizontalAlignment="Center">
            <Button Command="{Binding NavigateToWeddingsCommand}" Style="{StaticResource Styles.DashboardTileButton}"
                    Visibility="{Binding IsAdmin, Converter={StaticResource NullToVisibilityConverter}}">
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                    <iconPacks:PackIconMaterial Kind="Ring" Width="60" Height="60"/>
                    <Label Content="My Weddings" FontSize="20" Margin="0,10,0,0" Style="{StaticResource Styles.Label}"/>
                </StackPanel>
            </Button>

            <Button Command="{Binding NavigateToAdminCommand}" 
                    Style="{StaticResource Styles.DashboardTileButton}"
                    Margin="20,0,0,0"
                    Visibility="{Binding IsAdmin, Converter={StaticResource BooleanToVisibilityConverter}}">
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                    <iconPacks:PackIconMaterial Kind="ShieldAccount" Width="60" Height="60"/>
                    <Label Content="Admin Portal" FontSize="20" Margin="0,10,0,0" Style="{StaticResource Styles.Label}"/>
                </StackPanel>
            </Button>
            
        </WrapPanel>
    </StackPanel>
</Page>
