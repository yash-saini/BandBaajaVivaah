<Page x:Class="BandBaajaVivaah.WPF.Views.Pages.AddEditGuestsView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BandBaajaVivaah.WPF.Views.Pages"
      xmlns:views="clr-namespace:BandBaajaVivaah.WPF.Views"
      xmlns:sys="clr-namespace:System;assembly=mscorlib"
      xmlns:converters="clr-namespace:BandBaajaVivaah.WPF.Converters"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Background="White"
      Title="AddEditGuestsView">

    <Page.Resources>
        <converters:RadioButtonToStringConverter x:Key="RadioButtonToStringConverter"/>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </Page.Resources>

    <DockPanel Margin="10">
        <views:AddEditToolBar DockPanel.Dock="Top"
                          BackButtonClicked="Toolbar_BackButtonClicked"
                          SaveButtonClicked="Toolbar_SaveButtonClicked"
                           IsSaveEnabled="{Binding CanSave}"/>

        <Grid Margin="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <!-- Labels -->
                <ColumnDefinition Width="*"/>
                <!-- Inputs -->
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- First Name -->
            <Label Content="First Name"
               Style="{StaticResource Styles.Label}"
               Grid.Row="0" Grid.Column="0" VerticalAlignment="Center"/>
            <TextBox Text="{Binding FirstName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, ValidatesOnNotifyDataErrors=True}"
                 Style="{StaticResource Styles.ValidatedTextBoxStyle}"
                 Grid.Row="0" Grid.ColumnSpan="2" HorizontalAlignment="Left"
                     Margin="125,5"/>

            <!-- Last Name -->
            <Label Content="Last Name"
               Style="{StaticResource Styles.Label}"
               Grid.Row="1" Grid.Column="0" VerticalAlignment="Center"/>
            <TextBox Text="{Binding LastName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, ValidatesOnNotifyDataErrors=True}"
                 Style="{StaticResource Styles.ValidatedTextBoxStyle}"
                     HorizontalAlignment="Left"
                     Margin="125,5"
                     Grid.Row="1" Grid.ColumnSpan="2" />

            <Label Content="Side" Grid.Row="2" Grid.Column="0" VerticalAlignment="Center" Margin="0,0,10,0" Style="{StaticResource Styles.Label}"/>
            <StackPanel Grid.Row="2" Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                <RadioButton Content="Bride" GroupName="SideGroup" Margin="30,0,15,0" Style="{x:Null}"
                                 IsChecked="{Binding Side, Converter={StaticResource RadioButtonToStringConverter}, ConverterParameter='Bride'}"/>
                <RadioButton Content="Groom" GroupName="SideGroup" Margin="0,0,15,0" Style="{x:Null}"
                                 IsChecked="{Binding Side, Converter={StaticResource RadioButtonToStringConverter}, ConverterParameter='Groom'}"/>
                <RadioButton Content="Family" GroupName="SideGroup" Style="{x:Null}"
                                 IsChecked="{Binding Side, Converter={StaticResource RadioButtonToStringConverter}, ConverterParameter='Family'}"/>
            </StackPanel>

            <Label Content="RSVP Status" Grid.Row="3" Grid.Column="0" VerticalAlignment="Center" Margin="0,0,10,0" Style="{StaticResource Styles.Label}"/>
            <StackPanel Grid.Row="3" Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center" Margin="0,5">
                <RadioButton Content="Attending" GroupName="RsvpGroup" Margin="30,0,15,0" Style="{x:Null}"
                                 IsChecked="{Binding RSVPStatus, Converter={StaticResource RadioButtonToStringConverter}, ConverterParameter='Attending'}"/>
                <RadioButton Content="Declined" GroupName="RsvpGroup" Margin="0,0,15,0" Style="{x:Null}"
                                 IsChecked="{Binding RSVPStatus, Converter={StaticResource RadioButtonToStringConverter}, ConverterParameter='Declined'}"/>
                <RadioButton Content="Maybe" GroupName="RsvpGroup" Margin="0,0,15,0" Style="{x:Null}"
                                 IsChecked="{Binding RSVPStatus, Converter={StaticResource RadioButtonToStringConverter}, ConverterParameter='Maybe'}"/>
                <RadioButton Content="No Response" GroupName="RsvpGroup" Style="{x:Null}"
                                 IsChecked="{Binding RSVPStatus, Converter={StaticResource RadioButtonToStringConverter}, ConverterParameter='No Response'}"/>
            </StackPanel>

            <!-- Error message indicator -->
            <Border Grid.Row="4" Grid.ColumnSpan="2" 
                    BorderThickness="1" BorderBrush="#FFDC000C" 
                    Background="#15FF0000" CornerRadius="3" 
                    Margin="0,15,0,0" Padding="10"
                    Visibility="{Binding ShowValidationSummary, Converter={StaticResource BooleanToVisibilityConverter}}">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="⚠️" FontSize="14" Margin="0,0,8,0"/>
                    <TextBlock Text="Please correct all errors before saving." 
                   FontWeight="Medium" Foreground="DarkRed"/>
                </StackPanel>
            </Border>
        </Grid>
    </DockPanel>
</Page>
