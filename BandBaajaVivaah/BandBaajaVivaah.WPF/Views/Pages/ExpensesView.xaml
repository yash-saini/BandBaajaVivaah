<Page x:Class="BandBaajaVivaah.WPF.Views.Pages.ExpensesView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BandBaajaVivaah.WPF.Views.Pages"
      xmlns:views="clr-namespace:BandBaajaVivaah.WPF.Views"
      xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ExpensesView" Background="White">
    <DockPanel Margin="10">
        <views:PageToolBarView DockPanel.Dock="Top"
                                BackButtonClicked="Toolbar_BackButtonClicked"
                                AddButtonClicked="Toolbar_AddButtonClicked"
                                DeleteButtonClicked="Toolbar_DeleteButtonClicked"
                                RefreshButtonClicked="PageToolBarView_RefreshButtonClicked"
                                FirstPageClicked="Toolbar_FirstPageClicked"
                                PreviousPageClicked="Toolbar_PreviousPageClicked"
                                NextPageClicked="Toolbar_NextPageClicked"
                                LastPageClicked="Toolbar_LastPageClicked"
                                CurrentPage="{Binding CurrentPage, Mode=OneWay}"
                                TotalPages="{Binding TotalPages, Mode=OneWay}"
                                IsFirstPage="{Binding IsOnFirstPage, Mode=OneWay}"
                                IsLastPage="{Binding IsOnLastPage, Mode=OneWay}"
                                IsDeleteEnabled="{Binding IsItemSelected, Mode=OneWay}"/>

        <TextBlock Text="Expense List" FontSize="24" FontWeight="Bold" Margin="0,10,0,10" DockPanel.Dock="Top"/>
        <DataGrid ItemsSource="{Binding DisplayedItems}" 
                  SelectedItem="{Binding SelectedItem}"
                  IsReadOnly="True"
                  Style="{StaticResource Styles.DataGrid}"
                  MouseDoubleClick="DataGrid_MouseDoubleClick"
                  PreviewMouseDown="DataGrid_PreviewMouseDown">
            <DataGrid.Columns>
                <DataGridTemplateColumn Width="*" SortMemberPath="Description">
                    <DataGridTemplateColumn.HeaderTemplate>
                        <DataTemplate>
                            <StackPanel>
                                <TextBlock Text="Description" FontWeight="SemiBold"/>
                                <TextBox Text="{Binding DataContext.SearchDescription, RelativeSource={RelativeSource AncestorType=Page}, UpdateSourceTrigger=PropertyChanged}" 
                                         Margin="0,0,0,0"
                                         Padding="2"
                                         MaxLength="20"
                                         Width="100"
                                         VerticalContentAlignment="Center"
                                         BorderThickness="0,0,0,15" BorderBrush="Black"/>
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.HeaderTemplate>
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Description}" VerticalAlignment="Center" Margin="4,0"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTemplateColumn Width="130" SortMemberPath="Amount">
                    <DataGridTemplateColumn.HeaderTemplate>
                        <DataTemplate>
                            <StackPanel>
                                <TextBlock Text="Amount" FontWeight="SemiBold"/>
                                <TextBox Text="{Binding DataContext.SearchExpense, RelativeSource={RelativeSource AncestorType=Page}, UpdateSourceTrigger=PropertyChanged}" 
                                         Margin="0,0,0,0"
                                         Padding="2"
                                         MaxLength="10"
                                         Width="100"
                                         VerticalContentAlignment="Center"
                                         BorderThickness="0,0,0,15" BorderBrush="Black"/>
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.HeaderTemplate>
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Amount, StringFormat='Rs. {0:#,0.00}'}" VerticalAlignment="Center" Margin="4,0"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTemplateColumn Width="180" SortMemberPath="Category">
                    <DataGridTemplateColumn.HeaderTemplate>
                        <DataTemplate>
                            <StackPanel>
                                <TextBlock Text="Category" FontWeight="SemiBold"/>
                                <TextBox Text="{Binding DataContext.SearchCategory, RelativeSource={RelativeSource AncestorType=Page}, UpdateSourceTrigger=PropertyChanged}" 
                                         Margin="0,0,0,0"
                                         Padding="2"
                                         MaxLength="15"
                                         Width="100"
                                         VerticalContentAlignment="Center"
                                         BorderThickness="0,0,0,15" BorderBrush="Black"/>
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.HeaderTemplate>
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Category}" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="4,0"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTemplateColumn Width="170" SortMemberPath="PaymentDate">
                    <DataGridTemplateColumn.HeaderTemplate>
                        <DataTemplate>
                            <TextBlock Text="Payment Date" FontWeight="SemiBold"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.HeaderTemplate>
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding PaymentDate, StringFormat=MM/dd/yyyy}" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="4,0"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
    </DockPanel>
</Page>