<Page x:Class="BandBaajaVivaah.WPF.Views.Pages.WeddingsView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BandBaajaVivaah.WPF.Views.Pages"
      xmlns:views="clr-namespace:BandBaajaVivaah.WPF.Views"
      xmlns:vm="clr-namespace:BandBaajaVivaah.WPF.ViewModel"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="WeddingsView"
      Background="White">

    <DockPanel Margin="10">

        <views:PageToolBarView DockPanel.Dock="Top"
                                BackButtonClicked="Toolbar_BackButtonClicked"
                                AddButtonClicked="Toolbar_AddButtonClicked"
                                DeleteButtonClicked="Toolbar_DeleteButtonClicked"
                                RefreshButtonClicked="PageToolBarView_RefreshButtonClicked"
                                FirstPageClicked="Toolbar_FirstPageClicked"
                                PreviousPageClicked="Toolbar_PreviousPageClicked"
                                NextPageClicked="Toolbar_NextPageClicked"
                                LastPageClicked="Toolbar_LastPageClicked"
                                CurrentPage="{Binding CurrentPage, Mode=OneWay}"
                                TotalPages="{Binding TotalPages, Mode=OneWay}"
                                IsFirstPage="{Binding IsOnFirstPage, Mode=OneWay}"
                                IsLastPage="{Binding IsOnLastPage, Mode=OneWay}"/>

        <TextBlock Text="My Weddings" FontSize="24" FontWeight="Bold" Margin="0,10,0,10" DockPanel.Dock="Top"/>

        <DataGrid ItemsSource="{Binding DisplayedItems}" 
                  SelectedItem="{Binding SelectedItem}"
                  IsReadOnly="True"
                  Style="{StaticResource Styles.DataGrid}"
                  MouseDoubleClick="DataGrid_MouseDoubleClick">
            <DataGrid.Columns>
                <DataGridTemplateColumn Width="*" SortMemberPath="WeddingName">
                    <DataGridTemplateColumn.HeaderTemplate>
                        <DataTemplate>
                            <StackPanel>
                                <TextBlock Text="Wedding Name" FontWeight="SemiBold"/>
                                <TextBox Text="{Binding DataContext.SearchName, RelativeSource={RelativeSource AncestorType=Page}, UpdateSourceTrigger=PropertyChanged}" 
                                         Margin="0,0,0,0"
                                         Padding="2"
                                         MaxLength="10"
                                         Width="100"
                                         VerticalContentAlignment="Center"
                                         BorderThickness="0,0,0,15" BorderBrush="Black"/>
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.HeaderTemplate>
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding WeddingName}" VerticalAlignment="Center" Margin="4,0"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                
                <DataGridTextColumn Header="Date" Binding="{Binding WeddingDate, StringFormat='d'}" Width="150"/>
                
                <DataGridTemplateColumn Width="170" SortMemberPath="TotalBudget">
                    <DataGridTemplateColumn.HeaderTemplate>
                        <DataTemplate>
                            <StackPanel>
                                <TextBlock Text="Budget" FontWeight="SemiBold"/>
                                <TextBox Text="{Binding DataContext.SearchBudget, RelativeSource={RelativeSource AncestorType=Page}, UpdateSourceTrigger=PropertyChanged}" 
                                         Margin="0,0,0,0"
                                         Padding="2"
                                         MaxLength="10"
                                         Width="100"
                                         VerticalContentAlignment="Center"
                                         BorderThickness="0,0,0,15" BorderBrush="Black"/>
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.HeaderTemplate>
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding TotalBudget, StringFormat='C'}" VerticalAlignment="Center" Margin="4,0"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
    </DockPanel>
</Page>
