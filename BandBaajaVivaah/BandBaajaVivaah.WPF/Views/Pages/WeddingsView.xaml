<Page x:Class="BandBaajaVivaah.WPF.Views.Pages.WeddingsView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BandBaajaVivaah.WPF.Views.Pages"
      xmlns:views="clr-namespace:BandBaajaVivaah.WPF.Views"
      xmlns:vm="clr-namespace:BandBaajaVivaah.WPF.ViewModel"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="WeddingsView"
      Background="White">

    <DockPanel Margin="10">

        <views:PageToolBarView DockPanel.Dock="Top"
                                BackButtonClicked="Toolbar_BackButtonClicked"
                                AddButtonClicked="Toolbar_AddButtonClicked"
                                DeleteButtonClicked="Toolbar_DeleteButtonClicked"
                                RefreshButtonClicked="PageToolBarView_RefreshButtonClicked"/>

        <TextBlock Text="My Weddings" FontSize="24" FontWeight="Bold" Margin="0,10,0,10" DockPanel.Dock="Top"/>

        <DataGrid ItemsSource="{Binding Weddings}" 
                  SelectedItem="{Binding SelectedWedding}"
                  IsReadOnly="True"
                  Style="{StaticResource Styles.DataGrid}"
                  MouseDoubleClick="DataGrid_MouseDoubleClick">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Wedding Name" Binding="{Binding WeddingName}" Width="*"/>
                <DataGridTextColumn Header="Date" Binding="{Binding WeddingDate, StringFormat='d'}" Width="150"/>
                <DataGridTextColumn Header="Budget" Binding="{Binding TotalBudget, StringFormat='C'}" Width="150"/>
            </DataGrid.Columns>
        </DataGrid>
    </DockPanel>
</Page>
