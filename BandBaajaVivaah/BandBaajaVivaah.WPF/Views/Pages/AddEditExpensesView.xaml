<Page x:Class="BandBaajaVivaah.WPF.Views.Pages.AddEditExpensesView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BandBaajaVivaah.WPF.Views.Pages"
      xmlns:views="clr-namespace:BandBaajaVivaah.WPF.Views"
      xmlns:sys="clr-namespace:System;assembly=mscorlib"
      xmlns:converters="clr-namespace:BandBaajaVivaah.WPF.Converters"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Background="White"
      Title="AddEditExpensesView">

    <Page.Resources>
        <converters:RadioButtonToStringConverter x:Key="RadioButtonToStringConverter"/>
    </Page.Resources>

    <DockPanel Margin="10">
        <views:AddEditToolBar DockPanel.Dock="Top"
                           BackButtonClicked="Toolbar_BackButtonClicked"
                           SaveButtonClicked="Toolbar_SaveButtonClicked"/>

        <Grid Margin="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <!-- Labels -->
                <ColumnDefinition Width="*"/>
                <!-- Inputs -->
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Description -->
            <Label Content="Description"
               Style="{StaticResource Styles.Label}"
               Grid.Row="0" Grid.Column="0" VerticalAlignment="Center"/>
            <TextBox Text="{Binding Description, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                 Style="{StaticResource Styles.DataEntryTextBox}"
                 Grid.Row="0" Grid.ColumnSpan="2" HorizontalAlignment="Left"
                 Margin="125,5"/>

            <!-- Amount -->
            <Label Content="Amount (Rs.)"
               Style="{StaticResource Styles.Label}"
               Grid.Row="1" Grid.Column="0" VerticalAlignment="Center"/>
                        <TextBox Text="{Binding Amount, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, TargetNullValue=''}"
                 Style="{StaticResource Styles.DataEntryTextBox}"
                 Grid.Row="1" Grid.ColumnSpan="2" HorizontalAlignment="Left"
                 Margin="125,5"/>

            <!-- Category Radio Buttons -->
            <Label Content="Category"
               Style="{StaticResource Styles.Label}"
               Grid.Row="2" Grid.Column="0" VerticalAlignment="Top" Margin="0,8,0,0"/>

            <WrapPanel Grid.Row="2" Grid.Column="1" Margin="30,8,0,0">
                <RadioButton Content="Venue" GroupName="CategoryGroup" Margin="0,0,15,4" Style="{x:Null}"
                            IsChecked="{Binding Category, Converter={StaticResource RadioButtonToStringConverter}, ConverterParameter='Venue'}"/>
                <RadioButton Content="Catering" GroupName="CategoryGroup" Margin="0,0,15,4" Style="{x:Null}"
                            IsChecked="{Binding Category, Converter={StaticResource RadioButtonToStringConverter}, ConverterParameter='Catering'}"/>
                <RadioButton Content="Decoration" GroupName="CategoryGroup" Margin="0,0,15,4" Style="{x:Null}"
                            IsChecked="{Binding Category, Converter={StaticResource RadioButtonToStringConverter}, ConverterParameter='Decoration'}"/>
                <RadioButton Content="Photography" GroupName="CategoryGroup" Margin="0,0,15,4" Style="{x:Null}"
                            IsChecked="{Binding Category, Converter={StaticResource RadioButtonToStringConverter}, ConverterParameter='Photography'}"/>
                <RadioButton Content="Music" GroupName="CategoryGroup" Margin="0,0,15,4" Style="{x:Null}"
                            IsChecked="{Binding Category, Converter={StaticResource RadioButtonToStringConverter}, ConverterParameter='Music'}"/>
                <RadioButton Content="Attire" GroupName="CategoryGroup" Margin="0,0,15,4" Style="{x:Null}"
                            IsChecked="{Binding Category, Converter={StaticResource RadioButtonToStringConverter}, ConverterParameter='Attire'}"/>
                <RadioButton Content="Transportation" GroupName="CategoryGroup" Margin="0,0,15,4" Style="{x:Null}"
                            IsChecked="{Binding Category, Converter={StaticResource RadioButtonToStringConverter}, ConverterParameter='Transportation'}"/>
                <RadioButton Content="Accommodation" GroupName="CategoryGroup" Margin="0,0,15,4" Style="{x:Null}"
                            IsChecked="{Binding Category, Converter={StaticResource RadioButtonToStringConverter}, ConverterParameter='Accommodation'}"/>
                <RadioButton Content="Gifts" GroupName="CategoryGroup" Margin="0,0,15,4" Style="{x:Null}"
                            IsChecked="{Binding Category, Converter={StaticResource RadioButtonToStringConverter}, ConverterParameter='Gifts'}"/>
                <RadioButton Content="Other" GroupName="CategoryGroup" Margin="0,0,15,4" Style="{x:Null}"
                            IsChecked="{Binding Category, Converter={StaticResource RadioButtonToStringConverter}, ConverterParameter='Other'}"/>
            </WrapPanel>

            <!-- Payment Date -->
            <Label Content="Payment Date"
               Style="{StaticResource Styles.Label}"
               Grid.Row="3" Grid.Column="0" VerticalAlignment="Center"/>
            <DatePicker SelectedDate="{Binding PaymentDate, Mode=TwoWay}"
                      Grid.Row="3" Grid.Column="1"
                      HorizontalAlignment="Left"
                      Width="200"
                      Style="{StaticResource Styles.DatePicker}"
                      Margin="30,5,0,5"/>
        </Grid>
    </DockPanel>
</Page>