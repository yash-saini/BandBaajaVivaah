<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls">

    <Style x:Key="Styles.Button" TargetType="Button">
        <Setter Property="Background" Value="{StaticResource PrimaryBrush}"/>
        <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
        <Setter Property="Padding" Value="10,5"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Cursor" Value="Hand"/>
    </Style>

    <Style x:Key="Styles.DashboardTileButton" TargetType="Button" BasedOn="{StaticResource MahApps.Styles.Button}">
        <Setter Property="Width" Value="200"/>
        <Setter Property="Height" Value="150"/>
        <Setter Property="Margin" Value="10"/>
        <Setter Property="Background" Value="{DynamicResource MahApps.Brushes.Accent}"/>
        <Setter Property="Foreground" Value="{DynamicResource MahApps.Brushes.ThemeForeground}"/>
    </Style>

    <Style x:Key="Styles.ProfileButton" TargetType="mah:DropDownButton">
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Padding" Value="0"/>
    </Style>

    <Style x:Key="Styles.ButtonOnPageToolBar" TargetType="Button" BasedOn="{StaticResource Styles.Button}">
        <Setter Property="Background" Value="{StaticResource BrushOnPageToolBarBackground}"/>
        <Setter Property="Foreground" Value="{StaticResource BrushOnPageToolBarForeground}"/>
        <Style.Triggers>
            <Trigger Property="IsPressed" Value="True">
                <Setter Property="Background" Value="{DynamicResource BrushOnPageToolBarClickableBackground}"/>
            </Trigger>
        </Style.Triggers>
    </Style>
</ResourceDictionary>