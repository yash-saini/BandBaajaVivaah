<mah:MetroWindow x:Class="BandBaajaVivaah.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"        
        xmlns:local="clr-namespace:BandBaajaVivaah.WPF"
        xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
        xmlns:views="clr-namespace:BandBaajaVivaah.WPF.Views"
        mc:Ignorable="d"
        Title="Band Baaja Vivaah" Height="450" Width="800"
        TitleForeground="WhiteSmoke"
        WindowTitleBrush="SlateGray">

    <DockPanel>
        <views:ToolbarView DockPanel.Dock="Top" DataContext="{Binding ToolbarViewModel}"/>
        <Frame x:Name="MainFrame" NavigationUIVisibility="Hidden"/>
    </DockPanel>
</mah:MetroWindow>
